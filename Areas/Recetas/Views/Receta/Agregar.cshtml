@model Receta

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <link rel="apple-touch-icon" sizes="76x76" href="~/plantillaAdmin/assets/img/apple-icon.png" />
    <link rel="icon" type="image/svg" href="~/plantillaAdmin/assets/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Mis Recetas
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

    <link href="~/plantillaAdmin/assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
    <link href="~/plantillaAdmin/assets/demo/demo.css" rel="stylesheet" />

</head>
<body>
    <div class="container">

        <div class="sidebar" data-color="purple" data-background-color="black" data-image="../assets/img/sidebar-2.jpg">

            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text logo-normal">
                    Mis Recetas
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link" asp-area="Registrarse" asp-controller="Registro" asp-action="Usuario">
                            <i class="material-icons">dashboard</i>
                            <p>Inicio</p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Recetas" asp-controller="Receta" asp-action="Agregar">
                            <i class="material-icons">fastfood</i>
                            <p>Agregar Receta</p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Recetas" asp-controller="Receta" asp-action="ListarReceta">
                            <i class="material-icons">person</i>
                            <p>Listar Receta</p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Recetas" asp-controller="Receta" asp-action="RecetasUsuarios">
                            <i class="material-icons">person</i>
                            <p>Receteas de los Usuarios</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <style>

            table {
                margin: 30px 250px;
            }

            .card {
                margin: 30px 100px;
            }

            #agregar {
                align-items: center;
                margin: 10px 60px;
                width: 50%;
            }

            #cant {
                margin-left: 40px;
            }

            .nombre {
                color: #000000;
                text-align: center;
                padding: 10px;
                margin: 20px 200px;
                font-size: 20px;
                font-weight: 300;
            }

            .tarjeta {
                float: right;
            }
        </style>

        <div class="nombre">
            <label>NOMBRE DE LA RECETA</label>
            <input id="nombre" asp-for="nombre" type="text" class="form-control" placeholder="Ingrese el Nombre de la Receta" />
        </div>
        <div class="container mt-4">
            <div class="row" id="ingredientes">
                @foreach (Ingredientes ingredientes in Model.ingrediente)
                {
                    <div class="col-4">
                        <div class="card">
                            <input type="hidden" value="@ingredientes.idingrediente" id="receta" />
                            <div class="card-header">
                                <label>Ingrediente:@ingredientes.tipo </label>
                            </div>

                            <div class="card-body">
                                <img src="/Imagenes/@ingredientes.imagen" width="200" height="180" id="imagen">
                            </div>

                            <div class="card-footer text-center">
                                <label>Descripción:@ingredientes.descripcion</label>
                            </div>

                            <div class="form-control" id="cant">
                                <input asp-for="detalleR.cantidad" type="number" placeholder="Cantidad" name="Cantidad" />
                            </div>

                            <button value="@ingredientes.idingrediente" class="btn btn-danger">Agregar</button>
                        </div>

                    </div>
                }
            </div>
        </div>

        <div class="col-8">
            <form id="form" action="/Recetas/Receta/Detalle" method="post">
                <table class="table table-bordered" id="tabla">
                    <thead>

                        <tr>
                            <th>Código</th>
                            <th>Nombre receta</th>
                            <th>Descripción Ingrediente</th>
                            <th>Imagen ingrediente</th>
                            <th>ingrediente</th>
                            <th>Cantidad</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
                <button type="submit" class="btn btn-success btn-block">Guardar</button>

            </form>
        </div>
    </div>

    <script src="~/js/Receta.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
</body>
</html>
