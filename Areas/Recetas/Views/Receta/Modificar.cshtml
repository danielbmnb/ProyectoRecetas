@*@model Receta

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="~/lib/alertas/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/alertas/sweetalert2.js"></script>
    <script src="~/js/Validaciones.js"></script>

    <link rel="apple-touch-icon" sizes="76x76" href="~/plantillaAdmin/assets/img/apple-icon.png" />
    <link rel="icon" type="image/svg" href="~/plantillaAdmin/assets/img/favicon.png" />
    <link href="~/lib/alertas/sweetalert2.min.css" rel="stylesheet" />

    <title>
        Mis Recetas
    </title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

    <link href="~/plantillaAdmin/assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
    <link href="~/plantillaAdmin/assets/demo/demo.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <div class="sidebar" data-color="purple" data-background-color="black" data-image="../assets/img/sidebar-2.jpg">

            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text logo-normal">
                    Mis Recetas
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link" asp-area="Registrarse" asp-controller="Registro" asp-action="Admin">
                            <i class="material-icons">dashboard</i>
                            <p>Inicio</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Recetas" asp-controller="Receta" asp-action="ListarReceta">
                            <i class="material-icons">fastfood</i>
                            <p>Listar Recetas</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Recetas" asp-controller="Receta" asp-action="Agregar">
                            <i class="material-icons">fastfood</i>
                            <p>Agregar Receta</p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" asp-area="Registrarse" asp-controller="Registro" asp-action="ListarUsuarios">
                            <i class="material-icons">person</i>
                            <p>Listar Usuario</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Agregar Recetas</h4>
                                <style type="text/css">
                                    .card-title {
                                        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
                                        text-align: center;
                                    }

                                    .content {
                                        margin-left: 300px;
                                    }
                                </style>
                            </div>
                            <div class="card-body">
                                <form action="/Recetas/Receta/Guardar" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="codigo" />
                                    <div class="row">
                                        <div class="col-md-5 pr-1">
                                            <div class="form-group">
                                                <label asp-for="nombre"> </label>
                                                <input asp-for="nombre" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-3 px-1">
                                            <div class="form-group">
                                                <label asp-for="descripcion"></label>
                                                <input asp-for="descripcion" type="text" class="form-control">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label asp-for="ingredientes"></label>
                                                <select asp-for="idingrediente" class="form-control">
                                                    <option>Seleccione el ingrediente</option>
                                                    @foreach (Ingredientes ingredientes in Model.ingrediente)
                                                    {
                                                        <option value="@ingredientes.idingrediente">@ingredientes.tipo</option>

                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label asp-for="Imagenes"></label>
                                                <input asp-for="Imagenes" type="file" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <button id="Modificar" type="submit" onclick="Modificar()" class="btn btn-info btn-fill pull-right"><i class="fas fa-share"></i> Guardar</button>

                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>


</body>
</html>*@
